
<hr />

<h6 class="uk-h4 uk-display-inline">Additional Posts</h6>
<span class="uk-text-muted uk-float-right" data-uk-icon="icon: bookmark" data-uk-scrollspy="cls: uk-animation-fade"></span>

<div class="uk-tile uk-tile-secondary uk-padding-small uk-margin rounded-inset">
<ul class="uk-child-width-1-2@m uk-grid-small" data-uk-grid data-uk-height-match>
{{#next_post}}
<li>
<a href="{{url}}" title="{{title}}" class="uk-text-right uk-inline-clip uk-transition-toggle uk-cover-container uk-height-medium uk-width-1-1 uk-height-1-1 rounded">

	{{#if feature_image}}

	<img src="{{img_url feature_image}}" alt="{{title}}" title="{{title}}" class="rounded" data-uk-cover />
	<span class="uk-overlay uk-overlay-primary uk-transition-fade uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding uk-light">

	{{else if @blog.cover_image}}

	<img src="{{@blog.cover_image}}" alt="{{@blog.title}}" title="{{@blog.title}}" class="rounded" data-uk-cover />
	<span class="uk-overlay uk-overlay-primary uk-transition-fade uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding uk-light">

	{{else}}

	<span data-uk-icon="icon:home;ratio:2.5" class="uk-width-1-1 uk-height-1-1 uk-flex uk-flex-middle uk-flex-center"></span>
	<span class="uk-card uk-card-secondary uk-card-hover uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding">	

	{{/if}}
	
	<span class="uk-h4 uk-margin-remove"><span data-uk-icon="icon:triangle-left;ratio:1.6" class="uk-float-left uk-margin-right"></span>{{title}}</span>	
	<p class="uk-margin-small-top uk-text-small">{{excerpt words="20"}}&hellip;</p>
	</span>
</a>
</li>
{{/next_post}}
{{^next_post}}
<li>
<a href="{{url}}" title="{{title}}" class="uk-height-medium uk-width-1-1 uk-height-1-1 uk-card uk-card-secondary uk-card-hover rounded uk-flex uk-flex-middle uk-flex-center uk-flex-column">
	<span data-uk-icon="icon:home;ratio:2.2"></span><span class="uk-h5 uk-margin-small">{{@blog.title}}</span><p class="uk-margin-remove uk-text-small">{{@blog.description}}&hellip;</p>
</a>
</li>
{{/next_post}}

{{#prev_post}}
<li>
<div>
<a href="{{url}}" title="{{title}}" class="uk-text-left uk-inline-clip uk-transition-toggle uk-cover-container uk-height-medium uk-width-1-1 uk-height-1-1 rounded">
	{{#if feature_image}}
	<img src="{{img_url feature_image}}" alt="{{title}}" title="{{title}}" class="rounded" data-uk-cover />
	<span class="uk-overlay uk-overlay-primary uk-transition-fade uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding uk-light">
	<span class="uk-h4 uk-margin-remove">{{title}}<span data-uk-icon="icon:triangle-right;ratio:1.6" class="uk-float-right uk-margin-left"></span></span>
	<p class="uk-margin-small-top uk-text-small">{{excerpt words="20"}}&hellip;</p>
	{{else if @blog.cover_image}}
	<img src="{{@blog.cover_image}}" alt="{{@blog.title}}" title="{{@blog.title}}" class="rounded" data-uk-cover />
	<span class="uk-overlay uk-overlay-primary uk-transition-fade uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding uk-light">
	<span class="uk-h4 uk-margin-remove">{{title}}<span data-uk-icon="icon:triangle-right;ratio:1.6" class="uk-float-right uk-margin-left"></span></span>
	<p class="uk-margin-small-top uk-text-small">{{excerpt words="20"}}&hellip;</p>
	{{else}}
	<span data-uk-icon="icon:home;ratio:2.5" class="uk-width-1-1 uk-height-1-1 uk-flex uk-flex-middle uk-flex-center"></span>
	<span class="uk-card uk-card-secondary uk-card-hover uk-position-cover uk-flex uk-flex-center uk-flex-column uk-transition-scale-up uk-padding">	
	<span class="uk-h4 uk-margin-remove">{{@blog.title}}<span data-uk-icon="icon:home;ratio:1.6" class="uk-float-right uk-margin-left"></span></span>
	<p class="uk-margin-small-top uk-text-small">{{@blog.description}}&hellip;</p>
	{{/if}}
	</span>
</a>
</div>
</li>	      
{{/prev_post}}
{{^prev_post}}
<li>
<a href="{{url}}" title="{{title}}" class="uk-height-medium uk-width-1-1 uk-height-1-1 uk-card uk-card-secondary uk-card-hover rounded uk-flex uk-flex-middle uk-flex-center uk-flex-column">
	<span data-uk-icon="icon:home;ratio:2.2"></span><span class="uk-h5 uk-margin-small">{{@blog.title}}</span><p class="uk-margin-remove uk-text-small">{{@blog.description}}&hellip;</p>
</a>
</li>
{{/prev_post}}
</ul>
</div>
